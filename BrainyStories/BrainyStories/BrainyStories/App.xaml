<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BrainyStories.App">
    <Application.Resources>
        <ResourceDictionary>
            <OnPlatform x:TypeArguments="x:String" x:Key="Comic">
                <On Platform="Android" Value="Comic.ttf#Comic" />
                <On Platform="iOS" Value="Comic"/>
            </OnPlatform>
        </ResourceDictionary>
    </Application.Resources>
</Application>